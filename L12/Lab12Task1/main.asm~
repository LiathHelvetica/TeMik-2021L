MAX_COUNTER EQU 08D
COUNTER EQU 030H
ROT_VALUE EQU 01111111B
ROTATOR EQU 031H
MAX EQU 11111111B
MIN EQU 00000000B

; Row 0, Column 1
; Set Fade Out Interval pls
; Mapping Random
; Color Purple (obviously)

ORG 0000H
	LJMP INIT

ORG 0300H
INIT:	MOV DPTR, #N
	MOV COUNTER, #00H
	MOV ROTATOR, #ROT_VALUE
MAIN:	MOV A, ROTATOR
	MOV P0, #MIN
	MOV P1, A
	MOV A, COUNTER
	MOVC A, @A+DPTR
	MOV P0, A
	INC COUNTER
	MOV A, ROTATOR
	RR A
	MOV ROTATOR, A
	MOV A, COUNTER
	CJNE A, #MAX_COUNTER, MAIN
	MOV COUNTER, #00H
	LJMP MAIN

ORG 0900H
N:	DB 00000000B
	DB 00100100B
	DB 00100100B
	DB 00100100B
	DB 00101100B
	DB 00110100B
	DB 00100100B
	DB 00000000B

END